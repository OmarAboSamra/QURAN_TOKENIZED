# Development Environment Configuration
# Copy this file to .env and adjust values as needed

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database - Choose one:
# SQLite (default for development)
DATABASE_URL=sqlite:///./quran.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://quran_user:quran_pass@localhost:5432/quran_db

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=false
CACHE_TTL=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_TITLE=Qur'an Analysis API
API_VERSION=0.1.0
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Tokenization
QURAN_DATA_PATH=./data/quran_original_text.txt
OUTPUT_CSV_PATH=./data/quran_tokens_word.csv

# Root Extraction
ROOT_SOURCES=qurancorpus,tanzil,almaany
ROOT_CACHE_PATH=./data/quran_roots_cache.json
ROOT_API_TIMEOUT=30

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
TASK_MAX_RETRIES=3

# Monitoring
PROMETHEUS_ENABLED=false
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
