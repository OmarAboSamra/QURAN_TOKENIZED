# Production Environment Configuration
# IMPORTANT: Use strong passwords and secure settings

# Application
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database - PostgreSQL required for production
DATABASE_URL=postgresql+asyncpg://quran_user:CHANGE_ME_STRONG_PASSWORD@db:5432/quran_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Cache (required for production)
REDIS_URL=redis://redis:6379/0
CACHE_ENABLED=true
CACHE_TTL=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_TITLE=Qur'an Analysis API
API_VERSION=1.0.0
API_CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Tokenization
QURAN_DATA_PATH=/app/data/quran_original_text.txt
OUTPUT_CSV_PATH=/app/data/quran_tokens_word.csv

# Root Extraction
ROOT_SOURCES=qurancorpus,tanzil,almaany
ROOT_CACHE_PATH=/app/data/quran_roots_cache.json
ROOT_API_TIMEOUT=30

# Background Tasks
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
TASK_MAX_RETRIES=3

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Security
SECRET_KEY=CHANGE_ME_RANDOM_STRING_64_CHARS_MIN
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
